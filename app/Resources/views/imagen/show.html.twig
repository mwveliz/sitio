{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imagen</h1>

    <table>
        <tbody>
            <tr>
                <th>Descripcion</th>
                <td>{{ imagen.descripcion }}</td>
            </tr>
            <tr>
                <th>Fechahora</th>
                <td>{% if imagen.fechaHora %}{{ imagen.fechaHora|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{% if imagen.visible %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Ruta</th>
                <td>{{ imagen.ruta }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ imagen.autor }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ imagen.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagen_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imagen_edit', { 'id': imagen.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
