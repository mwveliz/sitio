{% extends 'base.html.twig' %}

{% block body %}
    <h1>Noticia list</h1>

    <table>
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Fechahora</th>
                <th>Visible</th>
                <th>Titulo</th>
                <th>Antetitulo</th>
                <th>Fuente</th>
                <th>Enlace</th>
                <th>Autor</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for noticium in noticias %}
            <tr>
                <td><a href="{{ path('noticia_show', { 'id': noticium.id }) }}">{{ noticium.descripcion }}</a></td>
                <td>{% if noticium.fechaHora %}{{ noticium.fechaHora|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if noticium.visible %}Yes{% else %}No{% endif %}</td>
                <td>{{ noticium.titulo }}</td>
                <td>{{ noticium.antetitulo }}</td>
                <td>{{ noticium.fuente }}</td>
                <td>{{ noticium.enlace }}</td>
                <td>{{ noticium.autor }}</td>
                <td>{{ noticium.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('noticia_show', { 'id': noticium.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('noticia_edit', { 'id': noticium.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('noticia_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
