{% extends 'base.html.twig' %}

{% block body %}
    <h1>Documento list</h1>

    <table>
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Ruta</th>
                <th>Visible</th>
                <th>Fechahora</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for documento in documentos %}
            <tr>
                <td><a href="{{ path('documento_show', { 'id': documento.id }) }}">{{ documento.descripcion }}</a></td>
                <td>{{ documento.ruta }}</td>
                <td>{% if documento.visible %}Yes{% else %}No{% endif %}</td>
                <td>{% if documento.fechaHora %}{{ documento.fechaHora|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ documento.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('documento_show', { 'id': documento.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('documento_edit', { 'id': documento.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documento_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
